<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/white"
                android:width="2dp"/>

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:color="#FFFFFF"
                android:width="3dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>
</layer-list>